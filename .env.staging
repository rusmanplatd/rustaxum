# Application Configuration
APP_NAME=RustAxum
APP_ENV=staging
APP_DEBUG=false
APP_URL=https://staging.yourdomain.com
APP_KEY=
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/rustaxum_staging
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=rustaxum_staging
DB_USERNAME=username
DB_PASSWORD=password
DB_POOL_MAX_CONNECTIONS=15
DB_POOL_MIN_CONNECTIONS=3
DB_POOL_ACQUIRE_TIMEOUT_SECONDS=30
DB_POOL_IDLE_TIMEOUT_SECONDS=600
DB_POOL_MAX_LIFETIME_SECONDS=1800

# Authentication Configuration
JWT_SECRET=staging-secret-key-different-from-production
JWT_EXPIRES_IN=3600
REFRESH_TOKEN_EXPIRES_IN=604800
PASSWORD_RESET_EXPIRY_HOURS=2
MAX_FAILED_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
BCRYPT_COST=12
PASSWORD_MIN_LENGTH=8
REQUIRE_EMAIL_VERIFICATION=true

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your-mailtrap-username
MAIL_PASSWORD=your-mailtrap-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=staging@yourdomain.com
MAIL_FROM_NAME=RustAxum Staging
MAIL_TIMEOUT_SECONDS=30

# Logging Configuration
LOG_LEVEL=info
LOG_CHANNEL=daily
LOG_PATH=storage/logs/app.log
LOG_MAX_FILES=7
LOG_MAX_FILE_SIZE=25MB