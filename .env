# Application Configuration
APP_NAME=RustAxum
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:3000
APP_KEY=
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://rustaxum:password@localhost:5432/rustaxum
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=rustaxum
DB_USERNAME=rustaxum
DB_PASSWORD=password
DB_POOL_MAX_CONNECTIONS=10
DB_POOL_MIN_CONNECTIONS=1
DB_POOL_ACQUIRE_TIMEOUT_SECONDS=30
DB_POOL_IDLE_TIMEOUT_SECONDS=600
DB_POOL_MAX_LIFETIME_SECONDS=1800

# Authentication Configuration
JWT_SECRET=your-secret-key-here-change-this-in-production
JWT_EXPIRES_IN=86400
REFRESH_TOKEN_EXPIRES_IN=604800
PASSWORD_RESET_EXPIRY_HOURS=24
MAX_FAILED_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
BCRYPT_COST=12
PASSWORD_MIN_LENGTH=8
REQUIRE_EMAIL_VERIFICATION=false

# Mail Configuration (Laravel-style)
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=none
MAIL_FROM_ADDRESS=noreply@rustaxum.com
MAIL_FROM_NAME=RustAxum
MAIL_TIMEOUT_SECONDS=30

# Legacy SMTP Configuration (for backward compatibility)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@rustaxum.com
SMTP_FROM_NAME=RustAxum
SMTP_USE_TLS=false

# Logging Configuration
LOG_LEVEL=info
LOG_CHANNEL=single
LOG_PATH=storage/logs/app.log
LOG_DAILY_PATH=storage/logs/app
LOG_MAX_FILES=7
LOG_MAX_FILE_SIZE=10MB
LOG_FORMAT=json
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S