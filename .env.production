# Application Configuration
APP_NAME=RustAxum
APP_ENV=production
APP_DEBUG=false
APP_URL=https://yourdomain.com
APP_KEY=
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/rustaxum_production
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=rustaxum_production
DB_USERNAME=username
DB_PASSWORD=password
DB_POOL_MAX_CONNECTIONS=20
DB_POOL_MIN_CONNECTIONS=5
DB_POOL_ACQUIRE_TIMEOUT_SECONDS=30
DB_POOL_IDLE_TIMEOUT_SECONDS=600
DB_POOL_MAX_LIFETIME_SECONDS=1800

# Authentication Configuration
JWT_SECRET=your-very-secure-production-secret-key
JWT_EXPIRES_IN=3600
REFRESH_TOKEN_EXPIRES_IN=604800
PASSWORD_RESET_EXPIRY_HOURS=1
MAX_FAILED_ATTEMPTS=3
LOCKOUT_DURATION_MINUTES=60
BCRYPT_COST=14
PASSWORD_MIN_LENGTH=12
REQUIRE_EMAIL_VERIFICATION=true

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=your-smtp-username
MAIL_PASSWORD=your-smtp-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME=RustAxum
MAIL_TIMEOUT_SECONDS=60

# Logging Configuration
LOG_LEVEL=warn
LOG_CHANNEL=daily
LOG_PATH=storage/logs/app.log
LOG_MAX_FILES=10
LOG_MAX_FILE_SIZE=50MB