<div class="alert alert-{{type}} {{#if dismissible}}alert-dismissible fade show{{/if}}" role="alert">
    {{#if icon}}
    <i class="{{icon}} me-2"></i>
    {{/if}}

    {{message}}

    {{#if dismissible}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    {{/if}}
</div>