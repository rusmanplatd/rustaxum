<form action="/auth/forgot-password" method="POST" class="needs-validation" novalidate>
    <!-- CSRF Token -->
    <input type="hidden" name="_token" value="{{ csrf_token }}">

    <div class="mb-4">
        <div class="alert alert-info border-0">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Password Reset</strong><br>
            Enter your email address below and we'll send you a secure link to reset your password.
            The link will expire in 60 minutes for security reasons.
        </div>
    </div>

    <div class="mb-4">
        <label for="email" class="form-label">
            <i class="fas fa-envelope me-1"></i> Email Address
        </label>
        <input type="email"
               class="form-control {{#if errors.email}}is-invalid{{/if}}"
               id="email"
               name="email"
               value="{{#if old_input.email}}{{ old_input.email }}{{/if}}"
               placeholder="Enter your registered email address"
               required
               autofocus>
        {{#if errors.email}}
            <div class="invalid-feedback">
                {{#each errors.email}}
                    {{ this }}
                {{/each}}
            </div>
        {{else}}
            <div class="invalid-feedback">
                Please provide a valid email address.
            </div>
        {{/if}}
        <div class="form-text">
            <i class="fas fa-clock me-1"></i>
            We'll send a password reset link to this email address if an account exists.
        </div>
    </div>

    <div class="d-grid gap-2 mb-4">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-paper-plane me-2"></i>
            Send Reset Link
        </button>
    </div>

    <div class="auth-links">
        <div class="row text-center">
            <div class="col-md-6 mb-2">
                <a href="/auth/login" class="text-auth">
                    <i class="fas fa-arrow-left me-1"></i>
                    Back to Sign In
                </a>
            </div>
            <div class="col-md-6 mb-2">
                <a href="/auth/register" class="text-auth">
                    <i class="fas fa-user-plus me-1"></i>
                    Create Account
                </a>
            </div>
        </div>
    </div>
</form>

<div class="mt-4">
    <div class="card border-0 bg-light">
        <div class="card-body">
            <h6 class="card-title">
                <i class="fas fa-question-circle me-2"></i>
                Need Help?
            </h6>
            <p class="card-text small mb-2">
                If you don't receive the email within a few minutes:
            </p>
            <ul class="small mb-0">
                <li>Check your spam or junk folder</li>
                <li>Make sure you entered the correct email address</li>
                <li>Try requesting another reset link</li>
                <li>Contact support if you continue having issues</li>
            </ul>
        </div>
    </div>
</div>