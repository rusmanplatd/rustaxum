{{! Template Showcase - Demonstrates all Handlebars features }}
<div class="container">
    {{> card
        header="Handlebars Template Features Showcase"
        header_icon="code"
        content="
        <h3>String Helpers</h3>
        <ul>
            <li><strong>Uppercase:</strong> {{ uppercase "hello world" }}</li>
            <li><strong>Lowercase:</strong> {{ lowercase "HELLO WORLD" }}</li>
            <li><strong>Capitalize:</strong> {{ capitalize "hello world" }}</li>
            <li><strong>Title Case:</strong> {{ title "hello world from rust" }}</li>
            <li><strong>Truncate:</strong> {{ truncate "This is a very long text that should be truncated" 20 }}</li>
            <li><strong>Truncate (words):</strong> {{ truncate "This is a very long text that should be truncated" 20 words=true suffix="…" }}</li>
            <li><strong>Default:</strong> {{ default null_value "Default Text" }}</li>
        </ul>

        <h3>Math Helpers</h3>
        <ul>
            <li><strong>Add:</strong> 5 + 3 = {{ add 5 3 }}</li>
            <li><strong>Subtract:</strong> 10 - 4 = {{ subtract 10 4 }}</li>
            <li><strong>Multiply:</strong> 6 × 7 = {{ multiply 6 7 }}</li>
            <li><strong>Divide:</strong> 15 ÷ 3 = {{ divide 15 3 }}</li>
            <li><strong>Modulo:</strong> 17 % 5 = {{ modulo 17 5 }}</li>
        </ul>

        <h3>Currency Helper</h3>
        <ul>
            <li><strong>USD:</strong> {{ formatCurrency 1234.56 "USD" }}</li>
            <li><strong>EUR:</strong> {{ formatCurrency 1234.56 "EUR" }}</li>
            <li><strong>GBP:</strong> {{ formatCurrency 1234.56 "GBP" }}</li>
            <li><strong>JPY:</strong> {{ formatCurrency 1234.56 "JPY" }}</li>
        </ul>

        <h3>Date Helpers</h3>
        <ul>
            <li><strong>Format Date:</strong> {{ formatDate "2025-01-15T10:30:00Z" "%Y-%m-%d" }}</li>
            <li><strong>Time Ago:</strong> {{ timeAgo "2025-01-15T10:30:00Z" }}</li>
        </ul>

        <h3>Comparison Helpers</h3>
        <ul>
            <li><strong>Equal:</strong> 5 == 5 is {{ eq 5 5 }}</li>
            <li><strong>Greater Than:</strong> 10 > 5 is {{ gt 10 5 }}</li>
            <li><strong>Less Than:</strong> 3 < 8 is {{ lt 3 8 }}</li>
        </ul>

        <h3>Array/Object Helpers</h3>
        <ul>
            <li><strong>Length:</strong> Array length is {{ length example_array }}</li>
            <li><strong>Is Empty:</strong> Array is empty: {{ isEmpty example_array }}</li>
        </ul>

        <h3>Utility Helpers</h3>
        <ul>
            <li><strong>JSON:</strong> <pre>{{ json example_object pretty=true }}</pre></li>
            <li><strong>URL Encode:</strong> {{ urlEncode "hello world & more" }}</li>
            <li><strong>HTML Escape:</strong> {{ htmlEscape "<script>alert(\"test\")</script>" }}</li>
        </ul>
        "
    }}

    {{> card
        header="Form Input Examples"
        header_icon="wpforms"
        content="
        {{> form-input
            label="Email Address"
            name="email"
            type="email"
            placeholder="Enter your email"
            prepend_icon="envelope"
            required=true
        }}

        {{> form-input
            label="Password"
            name="password"
            type="password"
            placeholder="Enter your password"
            prepend_icon="lock"
            append_icon="eye"
            append_action="togglePassword('password', 'password-icon')"
            required=true
        }}

        {{> form-input
            label="Description"
            name="description"
            type="textarea"
            placeholder="Enter description"
            rows=4
            help="Provide a detailed description"
        }}

        {{> form-input
            label="Country"
            name="country"
            type="select"
            placeholder="Select a country"
            options=country_options
            selected=selected_country
        }}
        "
    }}

    {{> card
        header="Alert Examples"
        header_icon="bell"
        content="
        {{> alert type="success" message="This is a success message!" title="Success"}}
        {{> alert type="info" message="This is an informational message." icon="info-circle"}}
        {{> alert type="warning" message="This is a warning message." no_dismiss=true}}
        {{> alert type="danger" message="This is an error message!"}}
        "
    }}

    <div class="row">
        <div class="col-md-6">
            {{> card
                header="Loading Spinner"
                header_icon="spinner"
                content="
                {{> loading-spinner}}
                <br><br>
                {{> loading-spinner size="sm" variant="secondary" show_text=true text="Loading data..."}}
                "
            }}
        </div>

        <div class="col-md-6">
            {{> card
                header="Pagination Example"
                header_icon="list"
                content="
                {{> pagination
                    current_page=3
                    total_pages=10
                    total_items=95
                    per_page=10
                    base_url="/users"
                    query_params="search=test&status=active"
                    page_range=pagination_range
                }}
                "
            }}
        </div>
    </div>

    <!-- Modal trigger button -->
    <div class="text-center mt-4">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Show Modal Example
        </button>
    </div>
</div>

<!-- Modal -->
{{> modal
    id="exampleModal"
    title="Example Modal"
    title_icon="star"
    size="lg"
    centered=true
    content="<p>This is an example modal using the modal partial.</p><p>It demonstrates how to use partials for reusable components.</p><div class='alert alert-info'>This alert is inside the modal!</div>"
    confirm_action="alert('Confirmed!')"
    confirm_text="Confirm"
    cancel_text="Cancel"
}}