<!-- Page Header -->
<div class="page-header">
    <h1 class="page-title">
        <i class="fas fa-tachometer-alt me-3"></i>
        {{ page_title }}
    </h1>
    <p class="page-subtitle">Welcome back, {{user.name}}! Here's what's happening with your account.</p>
</div>

<!-- Flash Messages -->
{{#if success_message}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
    <i class="fas fa-check-circle me-2"></i>
    {{ success_message }}
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
{{/if}}

{{#if error_message}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <i class="fas fa-exclamation-circle me-2"></i>
    {{ error_message }}
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
{{/if}}

<!-- Quick Stats Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card">
            <div class="stat-card-icon" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <i class="fas fa-user"></i>
            </div>
            <div class="stat-card-value">Active</div>
            <div class="stat-card-label">Account Status</div>
            <div class="stat-card-trend trend-up">
                <i class="fas fa-check-circle me-1"></i>
                Verified Account
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card">
            <div class="stat-card-icon" style="background: linear-gradient(135deg, #28a745 0%, #20c997 100%);">
                <i class="fas fa-calendar-check"></i>
            </div>
            <div class="stat-card-value">{{user.created_at}}</div>
            <div class="stat-card-label">Member Since</div>
            <div class="stat-card-trend">
                <i class="fas fa-clock me-1"></i>
                New Member
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card">
            <div class="stat-card-icon" style="background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);">
                <i class="fas fa-key"></i>
            </div>
            <div class="stat-card-value">1</div>
            <div class="stat-card-label">Active Sessions</div>
            <div class="stat-card-trend">
                <i class="fas fa-clock me-1"></i>
                Current Session
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card">
            <div class="stat-card-icon" style="background: linear-gradient(135deg, #dc3545 0%, #e83e8c 100%);">
                <i class="fas fa-shield-alt"></i>
            </div>
            <div class="stat-card-value">Good</div>
            <div class="stat-card-label">Security Status</div>
            <div class="stat-card-trend trend-up">
                <i class="fas fa-shield-alt me-1"></i>
                Protected
            </div>
        </div>
    </div>
</div>

<!-- Main Content Row -->
<div class="row">
    <!-- Welcome Card -->
    <div class="col-lg-8 mb-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <div class="d-flex align-items-start">
                    <div class="flex-shrink-0">
                        <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center" style="width: 80px; height: 80px; border: 3px solid #e9ecef;">
                            <i class="fas fa-user fa-2x text-white"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-4">
                        <h4 class="card-title mb-2">Welcome back, {{user.name}}!</h4>
                        <p class="text-muted mb-3">{{user.email}}</p>

                        <div class="row text-center">
                            <div class="col-4">
                                <div class="border-end">
                                    <h6 class="mb-1">{{user.id}}</h6>
                                    <small class="text-muted">User ID</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="border-end">
                                    <h6 class="mb-1">{{user.created_at}}</h6>
                                    <small class="text-muted">Created</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <h6 class="mb-1">{{user.updated_at}}</h6>
                                <small class="text-muted">Last Updated</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="col-lg-4 mb-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0">
                <h6 class="card-title mb-0">
                    <i class="fas fa-bolt me-2"></i>
                    Quick Actions
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/dashboard/profile" class="btn btn-outline-primary">
                        <i class="fas fa-user me-2"></i>
                        Edit Profile
                    </a>
                    <a href="/auth/change-password" class="btn btn-outline-secondary">
                        <i class="fas fa-key me-2"></i>
                        Change Password
                    </a>
                    <a href="/dashboard/security" class="btn btn-outline-warning">
                        <i class="fas fa-shield-alt me-2"></i>
                        Security Settings
                    </a>
                    <a href="/dashboard/notifications" class="btn btn-outline-info">
                        <i class="fas fa-bell me-2"></i>
                        Notifications
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Account Information -->
<div class="row">
    <div class="col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0">
                <h6 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2"></i>
                    Account Information
                </h6>
            </div>
            <div class="card-body">
                <div class="info-list">
                    <div class="info-item">
                        <span class="info-label">Full Name:</span>
                        <span class="info-value">{{user.name}}</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Email:</span>
                        <span class="info-value">{{user.email}}</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">User ID:</span>
                        <span class="info-value">{{user.id}}</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Account Created:</span>
                        <span class="info-value">{{user.created_at}}</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Last Updated:</span>
                        <span class="info-value">{{user.updated_at}}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0">
                <h6 class="card-title mb-0">
                    <i class="fas fa-shield-alt me-2"></i>
                    Security Checklist
                </h6>
            </div>
            <div class="card-body">
                <div class="security-checklist">
                    <div class="security-item completed">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        Account Created
                    </div>
                    <div class="security-item completed">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        Email Verified
                    </div>
                    <div class="security-item">
                        <i class="fas fa-times-circle text-warning me-2"></i>
                        Two-Factor Authentication
                        <a href="/dashboard/security" class="float-end btn btn-sm btn-outline-primary">Enable</a>
                    </div>
                    <div class="security-item">
                        <i class="fas fa-exclamation-circle text-info me-2"></i>
                        Password Strength
                        <a href="/auth/change-password" class="float-end btn btn-sm btn-outline-secondary">Review</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Getting Started -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0">
                <h6 class="card-title mb-0">
                    <i class="fas fa-rocket me-2"></i>
                    Getting Started with RustAxum
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="text-center">
                            <div class="mb-3">
                                <i class="fas fa-user-cog fa-3x text-primary"></i>
                            </div>
                            <h6>Complete Your Profile</h6>
                            <p class="text-muted small">Add more information to your profile to get the most out of RustAxum.</p>
                            <a href="/dashboard/profile" class="btn btn-sm btn-outline-primary">Edit Profile</a>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="text-center">
                            <div class="mb-3">
                                <i class="fas fa-shield-alt fa-3x text-success"></i>
                            </div>
                            <h6>Secure Your Account</h6>
                            <p class="text-muted small">Enable two-factor authentication and review your security settings.</p>
                            <a href="/dashboard/security" class="btn btn-sm btn-outline-success">Security Settings</a>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="text-center">
                            <div class="mb-3">
                                <i class="fas fa-bell fa-3x text-warning"></i>
                            </div>
                            <h6>Manage Notifications</h6>
                            <p class="text-muted small">Choose how and when you want to receive notifications from us.</p>
                            <a href="/dashboard/notifications" class="btn btn-sm btn-outline-warning">Notification Settings</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .info-list .info-item {
        display: flex;
        justify-content: space-between;
        padding: 0.5rem 0;
        border-bottom: 1px solid #f1f3f4;
        font-size: 0.9rem;
    }

    .info-list .info-item:last-child {
        border-bottom: none;
    }

    .info-label {
        font-weight: 600;
        color: #495057;
    }

    .info-value {
        color: #6c757d;
        font-family: 'SFMono-Regular', 'Menlo', 'Monaco', 'Consolas', monospace;
        font-size: 0.85rem;
    }

    .security-checklist .security-item {
        padding: 0.75rem 0;
        border-bottom: 1px solid #f1f3f4;
        display: flex;
        align-items: center;
    }

    .security-checklist .security-item:last-child {
        border-bottom: none;
    }

    .security-checklist .security-item.completed {
        opacity: 0.8;
    }
</style>