APP_NAME=RustAxum
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:3000

DATABASE_URL=postgresql://username:password@localhost:5432/rustaxum
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=rustaxum
DB_USERNAME=username
DB_PASSWORD=password

JWT_SECRET=your-secret-key-here-change-this-in-production
JWT_EXPIRES_IN=86400
REFRESH_TOKEN_EXPIRES_IN=604800

# Email configuration (Mailpit for development, SMTP for production)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@rustaxum.com
SMTP_FROM_NAME=RustAxum
SMTP_USE_TLS=false

# Password reset configuration
PASSWORD_RESET_EXPIRY_HOURS=24

# Account lockout configuration
MAX_FAILED_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

LOG_LEVEL=info